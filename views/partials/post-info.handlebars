<article class="message is-dark">
  <div class="message-header">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="message-body">
    <p>{{post_text}}</p>
    <p>Posted by {{user.username}} on {{format_date created_at}} | {{comments.length}} {{format_plural "comment" comments.length}}</p>
  </div>
</article>